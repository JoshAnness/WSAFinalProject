@model List<Actor>
@{ 
    ViewBag.Title = "View All Actors";
}

<h2>Actor List</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Name</td>
            <td>Birth Year</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(Actor a in Model)
            {
                <tr>
                    <td>@a.Name</td>
                    <td>@a.BirthYear</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Actor" asp-route-id="@a.ActorId" class="btn btn-outline-dark">Edit</a>
                        <a asp-action="Delete" asp-controller="Actor" asp-route-id="@a.ActorId" class="btn btn-outline-dark">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
<div class="align-self-center">
    <a class="btn btn-outline-primary" asp-area="" asp-controller="Actor" asp-action="Add">Add an Actor</a>
</div>
