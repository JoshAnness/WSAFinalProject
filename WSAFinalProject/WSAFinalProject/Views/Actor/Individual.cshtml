@model Actor
@{
    ViewBag.Title = Model.Name;
}

<h3>@Model.Name</h3>
<h2>Born in @Model.BirthYear</h2>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Movies</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (ActorMovie am in Model.ActorMovies)
        {
                <tr>@am.Movie.Name</tr>

        }

    </tbody>
</table>
<div class="align-self-center">
    <a asp-action="Edit" asp-controller="Actor" asp-route-id="@Model.ActorId" class="btn btn-outline-dark">Edit</a>
    <a asp-action="Delete" asp-controller="Actor" asp-route-id="@Model.ActorId" class="btn btn-outline-dark">Delete</a>
</div>




