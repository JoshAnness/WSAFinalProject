@model List<Movie>
@{
    ViewBag.Title = "Final Project Home";
}

<h1>Web Server Application Development II Final Project Home</h1>
<h2>Our favorite movies</h2>

<table class="table">
    <thead>
        <tr><th>Name</th><th>Year</th><th>Genre</th><th>Duration</th><th>Description</th><th>Cast</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (Movie m in Model) {
        <tr>
            <td>@m.Name</td>
            <td>@m.Year</td>
            <td>@m.Genre.Name</td>
            <td>@m.Duration</td>
            <td>Will be link to description</td>
            <td>Will Be link to cast</td>
            <td>
                <a asp-action="Edit" asp-controller="Movie" asp-route-id="@m.MovieId" class="btn btn-outline-dark">Edit</a>
                <a asp-action="Delete" asp-controller="Movie" asp-route-id="@m.MovieId" class="btn btn-outline-dark">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div class="align-self-center">
    <a class="btn btn-outline-primary" asp-area="" asp-controller="Movie" asp-action="Add">Add a Movie</a>
</div>