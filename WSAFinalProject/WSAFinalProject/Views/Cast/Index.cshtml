@model List<Cast>
@{
    ViewBag.Title = "View All Casts";
}

<h2>Cast List</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Movie</td>
            <td>Top 3 Cast</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (Cast c in Model)
        {
            <tr>
                <td>@c.Movie</td>
                @foreach (Actor a in c.Actors)
                {
                    <td>@a.Name</td>
                }
                <td>
                    <a asp-action="Individual" asp-controller="Cast" asp-route-id="@c.CastId" class="btn btn-outline-dark">View</a>
                    <a asp-action="Edit" asp-controller="Cast" asp-route-id="@c.CastId" class="btn btn-outline-dark">Edit</a>
                    <a asp-action="Delete" asp-controller="Cast" asp-route-id="@c.CastId" class="btn btn-outline-dark">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="align-self-center">
    <a class="btn btn-outline-primary" asp-area="" asp-controller="Cast" asp-action="Add">Add a Cast</a>
</div>