@model Cast
@{
    ViewBag.Title = Model.Movie.Name;
}

<h3>@Model.Movie.Name @Model.Movie.Year Cast</h3>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Actors</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Actor a in Model.Actors)
        {
            <tr>
                <td>@a.Name</td>
                <td>
                    <a asp-action="Individual" asp-controller="Cast" asp-route-id="@Model.CastId" class="btn btn-outline-dark">View</a>
                    <a asp-action="Edit" asp-controller="Cast" asp-route-id="@Model.CastId" class="btn btn-outline-dark">Edit</a>
                    <a asp-action="Delete" asp-controller="Cast" asp-route-id="@Model.CastId" class="btn btn-outline-dark">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<div class="align-self-center">
    <a asp-action="Edit" asp-controller="Cast" asp-route-id="@c.CastId" class="btn btn-outline-dark">Edit</a>
    <a asp-action="Delete" asp-controller="Cast" asp-route-id="@c.CastId" class="btn btn-outline-dark">Delete</a>
</div>
